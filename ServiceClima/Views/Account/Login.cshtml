@model ServiceClima.Models.LoginViewModel
@{
    Layout = "_Layout";
}
<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form class="for">
            <h1>Inicia sesión</h1>
            <img src="~/assets/acceso.jpeg" alt="" />
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>Bienvenido!</h1>
                <br />
                <div>
                    <form class="frm" asp-controller="Account" asp-action="Login" method="post">
                        Usuario:
                        <input asp-for="Email" type="text" class="form-control input" formControlName="username"
                                placeholder="Ingrese su usuario" required />
                        Contraseña:
                        <input asp-for="Password" type="password" class="form-control input" formControlName="userPass"
                        placeholder="Ingrese su contraseña" required />
                        <div>
                            <input type="submit" value="Iniciar sesión" class="ghost button" id="signUp" />
                        </div>
                    </form>
                   
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>